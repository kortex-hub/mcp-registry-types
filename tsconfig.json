{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "lib": ["ES2017", "webworker"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node"]
  },

  "include": ["src"],

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
