{
  "name": "@kortex-hub/mcp-registry-types",
  "version": "1.3.0-next",
  "description": "TypeScript types for the Model Context Protocol (MCP) Registry API",
  "repository": "https://github.com/kortex-hub/mcp-registry-types",
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "license": "MIT",
  "type": "module",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.d.ts" 
    },
    "./openapi.yaml": {
      "default": "./src/openapi.yaml"
    }
  },
  "scripts": {
    "fetch": "ts-node src/fetchSchema.ts",
    "generate": "npx openapi-typescript https://raw.githubusercontent.com/modelcontextprotocol/registry/refs/tags/v1.2.3/docs/reference/api/openapi.yaml -o src/schema.d.ts --export-type"
  },
  "devDependencies": {
    "@types/node": "^22",
    "openapi-typescript": "^7.8.0",
    "ts-node": "^10.9.2"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
